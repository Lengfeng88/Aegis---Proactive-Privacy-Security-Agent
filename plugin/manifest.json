{
  "manifest_version": 3,
  "name": "Link Behavior Predictor",
  "version": "1.0",
  "description": "Predict link behavior on hover and show advice tooltip.",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["https://your-render-domain.onrender.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
